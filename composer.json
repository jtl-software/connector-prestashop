{
  "name": "jtl/connector-prestashop",
  "type": "app",
  "description": "PrestaShop Connector",
  "keywords": [
    "jtl",
    "Connector"
  ],
  "homepage": "https://www.jtl-software.de",
  "license": "LGPL-3.0-or-later",
  "authors": [
    {
      "name": "JTL Software GmbH",
      "email": "info@jtl-software.de",
      "homepage": "https://www.jtl-software.de",
      "role": "Founder"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "vendor-dir": "lib",
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "require": {
    "php": ">= 8.0",
    "jtl/connector": "^5.2.10",
    "symfony/yaml": "^3.4",
    "ext-json": "*",
    "phing/phing": "^2.16",
    "psr/cache": "^2",
    "monolog/monolog": "1.*",
    "psr/log": "^1",
    "symfony/http-foundation": "^4.4",
    "jms/serializer": ">=3.3 <=3.24",
    "doctrine/lexer": "^1",
    "symfony/service-contracts": "^2.5",
    "symfony/event-dispatcher-contracts": "^1.2"
  },
  "autoload": {
    "psr-4": {
      "jtl\\Connector\\Presta\\": "src/",
      "Tests\\": "tests/"
    },
    "psr-0": {
      "": "plugins/"
    }
  },
  "require-dev": {
    "stancer/php-stubs-prestashop": "^8.1",
    "jtl/connector-cq": "*",
    "phpstan/phpstan": "^1.11",
    "squizlabs/php_codesniffer": "^3.10",
    "micheh/phpcs-gitlab": "^1.1",
    "slevomat/coding-standard": "^8.15"
  },
  "scripts": {
    "analyze": "@analyse",
    "analyse": [
      "@phpcs",
      "@phpstan"
    ],
    "phpcs": "phpcs --basepath=. --extensions=php --standard=JtlConnector --report=full src controllers index.php jtlconnector.php",
    "phpcs:fix": "phpcbf --basepath=. --extensions=php --standard=JtlConnector src controllers index.php jtlconnector.php",
    "phpcs:ci": "phpcs --basepath=. --extensions=php --standard=JtlConnector --report=full --report-\\\\Micheh\\\\PhpCodeSniffer\\\\Report\\\\Gitlab=phpcs-quality-report.json src controllers index.php jtlconnector.php",
    "phpstan": "phpstan analyse src controllers index.php jtlconnector.php --level max -c ./phpstan.neon",
    "phpstan:ci": "phpstan analyse src controllers index.php jtlconnector.php --level max -c ./phpstan.neon --error-format gitlab > phpstan-quality-report.json"
  }
}
